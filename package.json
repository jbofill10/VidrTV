{
	"name": "reactapp",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "cd server && npm start",
		"heroku-postbuild": "npm run build-client && npm run build-server",
		"client-dev": "lookenv --path=lookenv.config.js --dotenv=.env && cd client && npm start",
		"server-dev": "cd server && npm run start-dev",
		"build-client": "lookenv --path=lookenv.config.js --dotenv=.env && cd client && npm run build",
		"build-server": "cd server && npm run build",
		"install": "npm run client-install && npm run server-install",
		"client-install": "cd client && npm i",
		"server-install": "cd server && npm i"
	},
	"devDependencies": {
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"prettier": "^1.15.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/src/**/*.{js,json,css,md}": [ "prettier --write", "git add" ]
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4
	},
	"dependencies": {
		"chalk": "^2.4.2",
		"joi": "^14.3.1",
		"lookenv": "^1.0.1",
		"yargs": "^12.0.5"
	}
}
